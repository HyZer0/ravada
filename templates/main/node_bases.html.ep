<div ng-show="bases && ! bases.length">
    <%= l 'No bases found' %>
</div>

<div ng-repeat="base in bases | orderBy: name"
    class="row"
>

    <div class="col-md-1">
        <input type="checkbox" ng-model="base.enabled"
        ng-true-value="1" ng-false-value="0"
        ng-change="set_base_vm(base.id, base.enabled)"
        >
    </div>

    <div class="col-md-4">
        {{base.name}}
    </div>
</div>
